{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-opengl",
            "type": "shell",
            "command": "g++",
            "args": [
                "${workspaceFolder}/src/main.cpp",
                
                "-I", "${workspaceFolder}/libs/include",
                "-L", "${workspaceFolder}/libs/lib",

                "-lfreeglut",
                "-lopengl32",
                "-lglu32",

                "-o",
                "${workspaceFolder}/src/main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
